extend layout-backend

block content-back
  section.content-header
    h1
      | List All Articles
      small you can manage the articles
    ol.breadcrumb
      li
        a(href='http://localhost:3000/administrator/dashboard')
          i.fa.fa-dashboard
          |  Home
      li
        a(href='http://localhost:3000/articles-backend/index') Articles
      li.active Data tables

  .content
    .row
      .col-xs-12
        .box
          .box-header
            a.btn.btn-primary(href='http://localhost:3000/articles-backend/tipsntrick-form') 
              i.fa.fa-plus
              | &nbsp; Add Tips & Trick
            | &nbsp;
            a.btn.btn-primary(href='http://localhost:3000/articles-backend/eventnnews-form') 
              i.fa.fa-plus
              | &nbsp; Add Event & News
          .box-body
            table.dataTableDynamic.table.table-bordered.table-striped
              thead
                tr
                  th ID
                  th Title
                  th Body
                  th File
                  //- th Create At
                  th Tag
                  th Type
                  th action
              tbody
                each dd, i in dataArticles
                  if dd.article_type === 'tt'
                    -var disp = "Tips & Trick"
                    -var updateUrl = 'http://localhost:3000/articles-backend/tipsntrick-form/'+dd.id
                  else if dd.article_type === 'en'
                    -var disp = "Event & Articles"
                    -var updateUrl = 'http://localhost:3000/articles-backend/eventnnews-form/'+dd.id
                  else
                    -var disp = "default"
                    -var updateUrl = 'http://localhost:3000/articles-backend/defarticle-form/'+dd.id
                  tr
                    td= (i+1)
                    td= dd.title
                    td= dd.body
                    td= dd.file
                    //- td= dd.create_at
                    td= dd.tag
                    td !{disp}
                    td
                      a.btn.btn-sm.btn-warning(href=updateUrl )
                        i.fa.fa-edit
                        | &nbsp; update
                      | &nbsp;
                      a.btn.btn-sm.btn-danger(href='http://localhost:3000/articles-backend/remove/'+dd.id)
                        i.fa.fa-edit
                        | &nbsp; delete