extend layout-backend

block content-back
  section.content-header
    h1
      | List All Networks
      small you can manage the networks
    ol.breadcrumb
      li
        a(href=env.URL_HOST+'administrator/dashboard')
          i.fa.fa-dashboard
          |  Home
      li
        a(href=env.URL_HOST+'networks-backend/index') Networks
      li.active Data tables

  .content
    .row
      .col-xs-12
        .box
          .box-header
            a.btn.btn-primary(href=env.URL_HOST+'networks-backend/form') 
              i.fa.fa-plus
              | &nbsp; Add Network
          .box-body
            table.dataTableDynamic.table.table-bordered.table-striped
              thead
                tr
                  th ID
                  th Title
                  th link
                  th action
              tbody
                each dd, i in dataNetworks
                  tr
                    td= (i+1)
                    td= dd.title
                    td= dd.link
                    td
                      a.btn.btn-sm.btn-warning(href=env.URL_HOST+'networks-backend/form/'+dd.id)
                        i.fa.fa-edit
                        | &nbsp; update
                      | &nbsp;
                      a.btn.btn-sm.btn-danger(href=env.URL_HOST+'networks-backend/remove/'+dd.id)
                        i.fa.fa-edit
                        | &nbsp; delete