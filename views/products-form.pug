extend layout-backend

block content-back
  section.content-header
    h1
      | Form Create Product
      small you can manage the product
    ol.breadcrumb
      li
        a(href=env.URL_HOST+'administrator/dashboard')
          i.fa.fa-dashboard
          |  Home
      li
        a(href=env.URL_HOST+'products-backend/index') Products
      li.active Data tables

  .content
    .row
      .col-xs-12
        .box
          .box-header
            a.btn.btn-primary(href=env.URL_HOST+'products-backend/index') 
              i.fa.fa-toggle-left
              | &nbsp; Back
            form(method='post', action=formData.action, role='form', enctype='multipart/form-data')
                .box-body
                    .form-group
                        label Title
                        input(type='hidden', name='id', value=formData.id)
                        input.form-control(type='text', name='title', placeholder='enter title', required, value=formData.title)
                    .form-group
                        label Description
                        input.form-control(type='text', name='description', placeholder='enter description', required, value=formData.description)
                    .form-group
                        label File
                        input.form-control(type='file', name='file', placeholder='enter file', required, value=formData.file)
                    .form-group
                        label Product Type
                        select.form-control(name='product_type', required)
                          if formData.product_type === 'sparepart'
                            option(value="sparepart", selected) Sparepart
                            option(value="service") Service
                          else
                            option(value="sparepart") Sparepart
                            option(value="service", selected) Service
                    .form-group
                        input.btn.btn-success(type='submit', name='submit', value='Save Products')