extend layout-backend

block content-back
  section.content-header
    h1
      | List All Products
      small you can manage the products
    ol.breadcrumb
      li
        a(href=env.URL_HOST+'administrator/dashboard')
          i.fa.fa-dashboard
          |  Home
      li
        a(href=env.URL_HOST+'products-backend/index') Products
      li.active Data tables

  .content
    .row
      .col-xs-12
        .box
          .box-header
            a.btn.btn-primary(href=env.URL_HOST+'products-backend/form') 
              i.fa.fa-plus
              | &nbsp; Add Product
          .box-body
            table.dataTableDynamic.table.table-bordered.table-striped
              thead
                tr
                  th ID
                  th Title
                  th Description
                  th File
                  th Product Type
                  //- th Create At
                  th action
              tbody
                each dd, i in dataProducts
                  tr
                    td= (i+1)
                    td= dd.title
                    td= dd.description
                    td= dd.file
                    td= dd.product_type
                    //- td= dd.create_at
                    td
                      a.btn.btn-sm.btn-warning(href=env.URL_HOST+'products-backend/form/'+dd.id)
                        i.fa.fa-edit
                        | &nbsp; update
                      | &nbsp;
                      a.btn.btn-sm.btn-danger(href=env.URL_HOST+'products-backend/remove/'+dd.id)
                        i.fa.fa-edit
                        | &nbsp; delete