extend layout-backend

block content-back
  section.content-header
    h1
      | List All Sliders
      small you can manage the sliders
    ol.breadcrumb
      li
        a(href='http://localhost:3000/administrator/dashboard')
          i.fa.fa-dashboard
          |  Home
      li
        a(href='http://localhost:3000/sliders-backend/index') Sliders
      li.active Data tables

  .content
    .row
      .col-xs-12
        .box
          .box-header
            a.btn.btn-primary(href='http://localhost:3000/sliders-backend/form') 
              i.fa.fa-plus
              | &nbsp; Add Slider
          .box-body
            table.dataTableDynamic.table.table-bordered.table-striped
              thead
                tr
                  th ID
                  th Title
                  th Description
                  th File
                  //- th Create At
                  th Display
                  th action
              tbody
                each dd, i in dataSliders
                  if dd.display === 'n'
                    -var disp = "<a href='http://localhost:3000/sliders-backend/display/"+dd.id_slider+"/"+dd.display+"' class='btn btn-sm btn-danger'>No</a>"
                  else
                    -var disp = "<a href='http://localhost:3000/sliders-backend/display/"+dd.id_slider+"/"+dd.display+"' class='btn btn-sm btn-success'>Yes</a>"
                  tr
                    td= (i+1)
                    td= dd.title
                    td= dd.description
                    td= dd.file
                    //- td= dd.create_at
                    td !{disp}
                    td
                      a.btn.btn-sm.btn-warning(href='http://localhost:3000/sliders-backend/form/'+dd.id_slider)
                        i.fa.fa-edit
                        | &nbsp; update
                      | &nbsp;
                      a.btn.btn-sm.btn-danger(href='http://localhost:3000/sliders-backend/remove/'+dd.id_slider)
                        i.fa.fa-edit
                        | &nbsp; delete