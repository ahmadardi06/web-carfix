extend layout-backend

block content-back
  section.content-header
    h1
      | Form Create User
      small you can manage the users
    ol.breadcrumb
      li
        a(href=env.URL_HOST+'administrator/dashboard')
          i.fa.fa-dashboard
          |  Home
      li
        a(href=env.URL_HOST+'users-backend/index') Users
      li.active Data tables

  .content
    .row
      .col-xs-12
        .box
          .box-header
            a.btn.btn-primary(href=env.URL_HOST+'users-backend/index') 
              i.fa.fa-toggle-left
              | &nbsp; Back
            form(method='post', action=formData.action, role='form')
                .box-body
                    .form-group
                        label Name
                        input(type='hidden', name='id', value=formData.id)
                        input.form-control(type='text', name='name', placeholder='enter name', required, value=formData.name)
                    .form-group
                        label Email
                        input.form-control(type='email', name='email', placeholder='enter email', required, value=formData.email)
                    .form-group
                        label Username
                        input.form-control(type='text', name='username', placeholder='enter username', required, value=formData.username)
                    .form-group
                        label Password
                        input.form-control(type='password', name='password', placeholder='enter password', required, value=formData.password)
                    .form-group
                        label Role
                        select.form-control(name='role', required)
                          option(value="admin") Admin
                          option(value="client", selected) Client
                    .form-group
                        input.btn.btn-success(type='submit', name='submit', value='Save Users')